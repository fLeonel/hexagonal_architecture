{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@domain/*": [
        "src/features/libros/domain/*"
      ],
      "@application/*": [
        "src/features/libros/application/*"
      ],
      "@ports/*": [
        "src/features/libros/ports/*"
      ],
      "@adapters/*": [
        "src/features/libros/adapters/*"
      ]
    },
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}