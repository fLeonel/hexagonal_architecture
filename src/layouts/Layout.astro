---
// Import global styles that include Tailwind CSS
import "../styles/global.css";

// Define component props with TypeScript interface
interface Props {
  title: string;
  description?: string;
}

// Destructure props with defaults
const { 
  title, 
  description = "An Astro site with Tailwind CSS integration using hexagonal architecture" 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    
    <!-- Slot for additional head elements -->
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <!-- Main content slot -->
    <slot />
  </body>
</html>

